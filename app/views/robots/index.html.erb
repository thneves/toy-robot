<h1 class="text-primary text-center mt-5">Toy Robot <i class="bi bi-robot text-primary ms-4"></i></h1>

<div class="container w-50 text-center mt-5">
  <button class="btn btn-primary">PLACE</button>
  <button class="btn btn-warning">MOVE</button>
  <button class="btn btn-secondary">LEFT</button>
  <button class="btn btn-secondary">RIGHT</button>
</div>

<div class="d-flex flex-row justify-content-center">
  <%= render 'robots/instructions' %>
  <%= render 'robots/table' %>
  <div>
  <%= form_with(model: @robot) do |f| %>
    <%= f.label :x %>
    <%= f.text_field :x, class: 'form-control' %>
    <%= f.label :y %>
    <%= f.text_field :y, class: 'form-control' %>
    <%= f.label :f %>
    <%= f.select :f, {"Directions" => [["North", "N"], ["South", "S"], ["East", "E"], ["West", "W"]]}, class: 'form-control' %>
    <%= f.submit "Place Robot", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
